/* pages/organ/details/details.wxss */
.pageInfo{ padding: 30rpx;}
video{width: 750rpx;height: 340rpx;}
.videoUrl{width: 750rpx;height: 340rpx;}
/* 机构信息 */
.organDetailsPack{border:1px solid #b1b1b1;box-shadow:0rpx 0rpx 30rpx #b1b1b1;border-radius: 46rpx;padding: 40rpx 30rpx;}
.organ-name{display: flex;justify-content: space-between;}
.name{font-size: 30rpx;font-weight: 400;color: #000000;}
.iscollect{width: 99rpx;height: 45rpx;line-height: 45rpx;background: linear-gradient(90deg, #FF3716, #FE901F);border-radius: 23rpx;font-size: 24rpx;font-weight: 400;color: #FFFFFF;text-align: center;}
.organ-desc{width: 369rpx; font-size: 26rpx; font-weight: 400;color: #666666;margin-top: 20rpx; margin-bottom: 10rpx;}
.organ-tagList{display: flex;width: 300rpx;flex-wrap: wrap;}
.organ-tagItem{width: 76rpx;height: 40rpx;border-radius: 6rpx;font-size: 22rpx;font-weight: 400;text-align: center;line-height: 40rpx; margin-right: 20rpx;margin-bottom: 15rpx;overflow: hidden;}
.tagActive-0{background: #FFF6EC; color: #E79336;}
.tagActive-1{background: #EAFFF2;color: #42B66E;}
.tagActive-2{background: #EAF7FF;color: #427CB6;}
.tagActive-3{background: #ffe0fb; color: #E79336;}
.tagActive-4{background: #e3ecfd; color: #42B66E;}
.tagActive-5{background: #faecc1;color: #427CB6;}
.details-up-eqCode{ width: 296rpx;height: 261rpx; padding: 10rpx;}
.details-up{display: flex;justify-content: space-between;}
.organ-age{}
.organ-age-icon,.details-down-icon{color:#A98AED;font-size: 40rpx;}
.organ-age-dese,.details-down-desc{font-size: 24rpx;font-weight: 400;color: #999999;}
.wsc{background: linear-gradient(90deg, #7fc7ff, #7fc7ff);}
/* 分割线 */
.splie{border-top: 1px solid #E5E5E5;margin: 40rpx 0rpx;}
/* 优秀学员 */
.bbfcPack{ display: flex;}
.bbfcItem{padding: 0rpx 8rpx;}
.babyImg,.babyImg image{width: 216rpx;height: 314rpx; border-radius: 12rpx;}
.babyName{font-size: 26rpx; font-weight: 400;color: #333333;margin-top: 10rpx;}
/* 推荐视频 推荐图片 */
.recVideoPack{display: flex;justify-content: space-between;flex-wrap: wrap;}
.recVideoItem{padding-bottom: 30rpx;}
.recVideoImg,.recVideoImg image{width: 334rpx; height: 189rpx;border-radius: 12rpx;}
.recVideoName{font-size: 26rpx;font-weight: 400;padding-top: 20rpx;color: #333333;width: 300rpx;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;}
/* 标题模块 */
.namePack{display: flex;justify-content: space-between;padding-bottom: 20rpx;}
.namePack .namePackLeft{display: flex;}
.namePack .iconImg image{width: 41rpx;height: 40rpx;}
.namePack .title{font-size: 30rpx;font-weight: 500; color: #333333;}
.namePack .more{ font-size: 26rpx;font-weight: 400; color: #808080;}