.search_result_item_video{
  width: 334rpx;
  height: 235rpx;
  margin: 15rpx 10rpx;
  position: relative;
}
.img_video{
  width: 334rpx;
  height: 189rpx;
  border-radius: 12rpx;
}
.video_name{
  width: 334rpx;
  height: 25rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}