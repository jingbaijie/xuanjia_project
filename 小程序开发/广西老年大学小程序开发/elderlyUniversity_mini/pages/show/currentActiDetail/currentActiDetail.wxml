    <view class="sayToParty_list">
      <view class="sayToParty_item" wx:for="{{drawData}}" wx:key="index">
        <image src="{{imgUrl+item.uploadDetailList[0].filePath}}"></image>
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>
</view>
