.xj_container{width: 100%;padding: 30rpx 30rpx 0rpx 30rpx;box-sizing: border-box;}
.inputStyle{width: 692rpx;height: 80rpx;background-color: #F3F3F5;border-radius: 10rpx;padding-left: 26rpx;box-sizing: border-box;padding-right: 120rpx;}
.placeholderStyle{color: #979797;font-size: 36rpx;}
.input_numLimit{position: relative;margin-top: 20rpx;margin-bottom: 20rpx;}
.numLimit{color: #9E9EA0;font-size: 30rpx;position: absolute;left: 600rpx;top: 20rpx;}
.noLimitNumInput{margin: 20rpx 0rpx;}
.grey_solid{width: 100%;height: 1rpx;padding-top: 10rpx;box-sizing: border-box;border-bottom: 1rpx solid #CDCDCD;}
.type_list .type_option{width: 210rpx;height: 64rpx;border-radius: 30rpx;display: flex;justify-content: center;align-items: center;font-size: 36rpx;flex-wrap: wrap;margin-bottom: 20rpx;}
.type_list{display: flex;flex-wrap: wrap;justify-content: space-between;}
/* 样式选中未选中的样式 */
.unchecked{background-color: #F3F3F5;color: #464545;}
.checked{background-color: #701C10;color: #FFFFFF;}
.type_list{margin-top: 26rpx;}
/* 上传封面、作品 */
.uploadModule{display: flex;}
.uploadModule .uploadModule_unit{margin-top: 30rpx;margin-bottom: 30rpx;position: relative;margin-right: 36rpx;}
.uploadModule_unit .contentPart{width: 194rpx;height: 194rpx;}
.uploadModule_unit .deleteIcon{width:54rpx;height: 54rpx;position: absolute;right: -10rpx;top: -20rpx;}
/* 取消和上传按钮 */
.cancel_upload{display: flex;justify-content: space-between;margin-bottom: 45rpx;}
.cancel_upload .btn{width: 330rpx;height: 88rpx;background-color: #85270E;display: flex;justify-content: center;align-items: center;color: #FFFFFF;font-size: 48rpx;border-radius: 10rpx;}
/* 弹窗背景 */
.tipBG{width: 100%;height: 100%;background-color: rgba(0, 0, 0, 0.6);position: fixed;left: 0rpx;top: 0rpx;z-index: 1;display:flex;align-items: center;}
.tipBG .tip_kuang{width: 606rpx;height: 425rpx;background-color: #FFFFFF;border-radius: 10rpx;position: absolute;left: calc(50% - 300rpx);z-index: 2;text-align: center;}
.tipBG .tipText{display: flex;flex-direction: column;justify-content: center;align-items: center;margin-top: 34rpx;position: absolute;top: 100rpx;width: 100%;}
.smileIcon{width: 224rpx;height: 200rpx;position: absolute;left: calc(50% - 112rpx);top: -90rpx;}
/* 弹窗提示确认按钮 */
.tipConfirmBtn{width: 100%;height: 108rpx;background-color: #701C10;display: flex;justify-content: center;align-items: center;color: #FFFFFF;font-size: 46rpx;position: absolute;left: 0rpx;bottom: 0rpx;border-radius: 0rpx 0rpx 10rpx 10rpx;}