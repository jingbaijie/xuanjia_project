.xj_container{width: 100%;height: 100%;padding-left: 30rpx;padding-right: 30rpx;box-sizing: border-box;}
/* 搜索栏 */
.topBg{padding:15rpx 65rpx;box-sizing:border-box;width:100%;height:78rpx;background-color: #701C10;}
.topBg input{width: 100%;height: 100%;background: #ffffff;border-radius: 25rpx 25rpx;text-align: center;padding: 0rpx 30rpx;box-sizing: border-box;}
.title{display: flex;justify-content: space-around;width: 100%;height: 100rpx;align-items: center;font-size: 32rpx;}
.title view{width:50%;height:100%;display:flex;justify-content: center;align-items: center;}
.myWorksList .list{padding: 30rpx 15rpx;box-sizing: border-box;background: #EDEDED;display: flex;margin-bottom: 30rpx;position: relative;}
.myWorksList .leftImage{width: 285rpx;height: 178rpx;position: relative;}
.myWorksList .leftImage image{width: 100%;height: 100%;border-radius: 10rpx;}
.myWorksList .rightText{margin-left: 30rpx;display: flex;flex-direction: column;justify-content: space-between;font-size: 26rpx;padding-top: 8rpx;padding-bottom: 8rpx;box-sizing: border-box;}
.myWorksList .rightText view{display: flex;justify-content: flex-start;align-items: center;}
.myWorksList .rightText image{height: 25rpx;width: 25rpx;margin-right: 10rpx;}
.myWorksList .list .deleteBtn{position: absolute;right: 40rpx;bottom: 30rpx;width: 90rpx;height: 40rpx;border-radius: 10rpx;border: 1rpx solid #999999;display: flex;align-items: center;justify-content: center;font-size: 24rpx;}
.myWorksList .likeVisitNum{width: 80rpx;height: 32rpx;background: rgba(0, 0, 0, 0.3);border-radius: 25rpx;position: absolute;right: 20rpx;bottom: 10rpx;display: flex;justify-content: space-around;align-items: center ;}
.myWorksList .likeVisitNum image{width: 25rpx;height: 25rpx;}
.myWorksList .likeVisitNum text{color: #ffff;font-size: 20rpx;}
.defaultPage{display: flex;justify-content: center;flex-direction: column;align-items: center;margin-top: 70rpx;}
.defaultPage view{font-size: 40rpx;margin-top: 40rpx;font-weight: bold;}
.uploadBtn{width:280rpx;height:80rpx;border-radius:10rpx;background:#701C10;color:#fff;display:flex;justify-content: center;align-items: center;}
.noUpload{display: flex;justify-content: center;flex-direction: column;align-items: center;margin-top: 70rpx;}
.noUpload view{font-size: 40rpx;margin-bottom: 40rpx;font-weight: bold;}