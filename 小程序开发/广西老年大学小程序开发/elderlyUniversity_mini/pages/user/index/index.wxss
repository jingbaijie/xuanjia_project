.xj_container{width: 100%;height: 100%;padding-left: 30rpx;padding-right: 30rpx;box-sizing: border-box;}
/* 头像、姓名 */
.headPic_name{width: 100%;height: 432rpx;background-color: #701C10;display: flex;flex-direction: column;align-items: center;padding-top: 10rpx;box-sizing: border-box;}
.headPic_name image{width: 294rpx;height: 294rpx;}
.headPic_name text{margin-top: 40rpx;color: #ffffff;font-size: 42rpx;}
/* 灰色间隔 */
.space_grey{width: 100%;height: 10rpx;background-color: #EDEDED;}
/* 个人信息列表 */
button[plain]{border: none;}
.userInfo_item, button[plain]{display: flex;justify-content: space-between;border-bottom: 1rpx solid #ACACAC;align-items: center;padding: 28rpx 0rpx;box-sizing: border-box;}
.userInfo_item .leftIcon_text{display: flex;align-items: center;}
.userInfo_item .leftIcon_text image{width: 50rpx;height: 48rpx;}
.userInfo_item .leftIcon_text text{color: #282828;font-size: 36rpx;margin-left: 10rpx;}
.userInfo_item .rightIcon{width: 12rpx;height: 20rpx;}