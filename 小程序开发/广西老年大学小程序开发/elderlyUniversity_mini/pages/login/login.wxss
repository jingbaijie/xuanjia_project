.loginBg{width: 100%;height: 100%;position: fixed;background-color: rgba(0, 0, 0, 0.6);display: flex;align-items: center;}
/* 微信授权弹窗样式 */
.getAuthorizeInfo{width: 606rpx;height: 424rpx;background-color: #ffffff;border-radius: 10rpx;margin: 0 auto;position: relative;}
.getAuthorizeInfo .text_tip{display: flex;flex-direction: column;align-items: center;padding-top: 40rpx;box-sizing: border-box;}
.getAuthorizeInfo .text_tip .first{color: #701C10;font-size: 60rpx;font-weight: bold;}
.getAuthorizeInfo .text_tip .second{color: #2C2C2C;font-size: 50rpx;margin-top: 20rpx;}
.getAuthorizeInfo .text_tip .third{color:#313131;font-size: 40rpx;margin-top: 10rpx;}
/* 登录按钮 */
.loginBtn{width: 100%;height: 108rpx;background-color: #701C10;position: absolute;bottom: 0rpx;left: 0rpx;color: #ffffff;font-size: 46rpx;display: flex;justify-content: center;align-items: center;border-radius: 0rpx 0rpx 10rpx 10rpx;}