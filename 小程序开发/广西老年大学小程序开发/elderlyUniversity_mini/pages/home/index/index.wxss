/* 轮播图 */
.swiper-box{background-color: white;}
.banner-img-box {text-align: center;padding-top: 14rpx;box-sizing: border-box;}
.banner-img {width: 95%;height: 270rpx;border-radius: 20px;}

.cate-box {display: flex;justify-content: space-around;padding: 24rpx 0 24rpx 0;font-size: 32rpx;color: #313131;background-color: white;box-sizing: border-box;}
.cate-list {text-align: center;}
.cate-list-img {width: 78rpx;height: 78rpx;}

.jchg{background-color: white;margin: 10rpx 0 0 0;padding-bottom: 28rpx;box-sizing: border-box;}
.jc-box {display: flex;justify-content: space-around;}
.jc-list-img {width: 332rpx;height: 184rpx;border-radius: 10rpx;}

.title-img {width: 6rpx;height: 22rpx;border-radius: 100rpx;}
.rb-box {display: flex;justify-content: space-around;flex-wrap: wrap;}
.rb-list{width: 330rpx;margin-bottom: 15rpx;}
.rb-list-img {width: 330rpx;height: 185rpx;border-radius: 10rpx;}
.rb-list text{color: #242424;font-size: 30rpx;overflow: hidden;text-overflow: ellipsis;-webkit-box-orient: vertical;-webkit-line-clamp: 2;display: -webkit-box;margin-top: 10rpx;}
.list-title {margin-left: 30rpx;font-size: 30rpx;color: #313131;font-weight: 700;display: flex;padding: 20rpx 0;box-sizing: border-box;}
.title-text {padding-left: 14rpx;box-sizing: border-box;}

.list-more-img {width: 12rpx;height: 20rpx;}
.list-top {display: flex;justify-content: space-between}
.list-more {display: flex;padding: 20rpx 30rpx 20rpx 0;box-sizing: border-box;}
.list-more-img-box {padding-left: 10rpx;box-sizing: border-box;}
.jrrb{margin-top: 10rpx;background-color: white;}
