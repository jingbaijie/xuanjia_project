/* pages/home/video/video.wxss */
.xj_container{width: 100%;padding: 0rpx 30rpx;box-sizing: border-box;}
.viedo{width: 100vw;}
.web_view{width: 100vw;}
.sheetName_icon{width: 100%;display: flex;justify-content: space-between;margin-top: 30rpx;}
.sheetName_icon image{width: 41rpx;height: 40rpx;}
.sheetName{width:530rpx;display: flex;align-items: center;font-size: 38rpx;font-weight: bold;}
/* 视频列表 */
.videoList{white-space: nowrap;}
.listCss{width: 250rpx;height: 140rpx;margin-right: 25rpx;display: inline-block;white-space: normal;font-size: 30rpx;border-radius: 10rpx;position: relative;}
.listCss:last-child{margin-right: 0rpx;}
.noChoose{background: rgba(0, 0, 0, 0.6);color: #ffffff;}
.listCss view{overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;text-align: center;position: absolute;left: 50%;top: 50%;transform: translate(-50%, -50%);width: 90%;}
.choosed{background: rgba(0, 0, 0, 0.2);color: #ff3c00;font-weight: bold;}
/* 更多精彩、更多课程 */
.course_list, .excellent_list{display: flex;flex-wrap: wrap;justify-content: space-between;}
.course_list view, .excellent_list view{width: 335rpx;margin-bottom: 20rpx;}
.course_list image{width:335rpx;height:180rpx;border-radius: 10rpx;}
.excellent_list image{width:335rpx;height:180rpx;border-radius: 10rpx;margin-bottom: 10rpx;}
.excellent_list text{color: #242424;font-size: 30rpx;overflow: hidden;text-overflow: ellipsis;-webkit-box-orient: vertical;-webkit-line-clamp: 2;display: -webkit-box;}
.sheetName_icon .rightIcon, .sheetName_icon .rightIcon button{display: flex;justify-content: center;align-items: center;border:none;}
